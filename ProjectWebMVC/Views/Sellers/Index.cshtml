@model IEnumerable<ProjectWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}
<h2>@ViewData["Title"]</h2>
<style>
    /* Estilo padrão: fundo azul muito suave, bordas suaves e cantos arredondados */
    .btn-custom {
        background-color: #E6F0FF; /* Azul muito suave */
        border: 2px solid #A0BFFF; /* Borda em tom suave de azul */
        color: #000;
        transition: background-color 0.3s, border-color 0.3s, color 0.3s;
        border-radius: 10px; /* Cantos arredondados */
    }

        /* Estado ativo/clicado: fundo e borda em azul oceano */
        .btn-custom:active,
        .btn-custom.active,
        .btn-custom:focus {
            background-color: #1E90FF; /* Azul oceano */
            border-color: #1E90FF;
            color: #fff;
        }
</style>

<p>
    <a asp-action="Create" class="btn btn-default btn-custom" data-toggle="button">
        Create New
    </a>
</p>


<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Name )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate )
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary )
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
         <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.Name)
             </td>

             <td>
                 @Html.DisplayFor(modelItem => item.Email)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.BirthDate)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.BaseSalary)
             </td>
             <td>
                 <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                 <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                 <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
             </td>
         </tr>   
        }
    </tbody>
</table>
